spring.application.name=service-account
server.port=8082

# Oracle Database Configuration
spring.datasource.url=jdbc:oracle:thin:@localhost:1521:XE
spring.datasource.username=TOYCELL_ACCOUNT
spring.datasource.password=${DB_PASSWORD_ACCOUNT:ToyAccount2026!}
spring.datasource.driver-class-name=oracle.jdbc.OracleDriver

# JPA Configuration
spring.jpa.hibernate.ddl-auto=update
spring.jpa.show-sql=true
spring.jpa.properties.hibernate.format_sql=true
spring.jpa.properties.hibernate.dialect=org.hibernate.dialect.OracleDialect
spring.jpa.database-platform=org.hibernate.dialect.OracleDialect

# Encryption Configuration
encryption.secret.key=${ENCRYPTION_SECRET_KEY:ToycellSecretKey2026______}

# JWT Configuration (for validation)
jwt.secret.key=${JWT_SECRET_KEY:ToycellJwtSecretKeyForAuthenticationMustBe256BitsLong123456789012}

# Logging
logging.level.com.toycell=DEBUG
logging.level.org.hibernate.SQL=DEBUG
